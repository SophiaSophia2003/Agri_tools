<!-- app/views/admin/products/index.html.erb -->

<h1>Order Management</h1>


<table class="table">
  <thead>
    <tr>
      <th>Customer ID</th>
      <th>Customer Name</th>
      <th>Order Id</th>
      <th>Order Status</th>
      <th>Total Amount</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.customer_id %></td>
        <td><%= order.customer.first_name %></td>
        <td><%= order.id %></td>
        <td><%= order.status %></td>
        <td><%= order.total_amount %></td>
        <td>
          <%#= link_to 'Edit', edit_administrators_order_path(order), class: 'btn btn-warning btn-sm' %>
          <%= link_to 'View', administrators_order_path(order), class: 'btn btn-primary btn-sm' %>
          <%#= link_to 'Delete', administrators_order_path(order), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
