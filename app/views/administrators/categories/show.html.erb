
<h1>Category Details</h1>

<div>
  <strong>Name:</strong>
  <%= @category.name %>
</div>

<%= link_to 'Edit', edit_administrators_category_path(@category), class: 'btn btn-warning' %>
<%= link_to 'Back', administrators_categories_path, class: 'btn btn-secondary' %>

<br>
<br>
<br>
<h2>Products</h2>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.stock_quantity %></td>
        <td>
          <%= link_to 'Edit', edit_administrators_product_path(product), class: 'btn btn-warning btn-sm' %>
          <%= link_to 'View', administrators_product_path(product), class: 'btn btn-primary btn-sm' %>
          <%= link_to 'Delete', administrators_product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>



