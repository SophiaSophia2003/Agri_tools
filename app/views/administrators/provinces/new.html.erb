    <%= form.label :gst_rate %>
    <%= form.text_field :gst_rate , class: 'form-control'%>
  </div>

  <div class="field">
    <%= form.label :pst_rate%>
    <%= form.text_field :pst_rate, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :hst_rate %>
    <%= form.text_field :hst_rate, class: 'form-control' %>
  </div>
<br>
  <div class="actions">
     <%= submit_tag 'Submit', class: 'btn btn-primary btn-sm' %>
  </div>
<% end %>

