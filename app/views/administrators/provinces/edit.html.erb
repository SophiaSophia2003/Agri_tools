
<h1>Edit Province</h1>

<%= form_with(model: [:admin, @province], url: administrators_province_path(@province), method: :patch) do |form| %>
  <% if @province.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@province.errors.count, 'error') %> prohibited this province from being saved:</h2>

      <ul>
        <% @province.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :gst_rate %>
    <%= form.number_field :gst_rate, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :pst_rate %>
    <%= form.number_field :pst_rate, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :hst_rate %>
    <%= form.number_field :hst_rate, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back', administrators_provinces_path, class: 'btn btn-secondary' %>

