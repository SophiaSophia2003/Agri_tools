<div class="row navbar navbar-expand-lg navbar-light bg-light">
  <div class="col-md-4">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to 'Agri tools', products_path, class: 'navbar-brand' %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <% if customer_signed_in? %>
              <%= link_to "My Account", customer_path, class: "nav-link" %>
            <% else %>
              <%= link_to "Sign In", new_customer_session_path, class: "nav-link" %>
            <% end %>
          </li>
            <% if customer_signed_in? %>
          <li class="nav-item">
            <%= link_to 'Your Orders', orders_path, class: 'nav-link' %>
          </li>
          <%end%>
          <li class="nav-item">
            <%= link_to 'Products', products_path, class: 'nav-link' %>
            <!-- <a class="nav-link" href="#">Products</a> -->
          </li>
          <li class="nav-item">
            <% if customer_signed_in? %>
              <%= form_tag(destroy_customer_session_path, method: :delete) do %>
                <%= csrf_meta_tags %>
                <%= submit_tag 'Logout', class: 'btn btn-danger btn-sm' %>
              <% end %>
            <% end %>
          </li>
        </ul>
      </div>
    </nav>
  </div>
  <div class="col-md-6">
    <%= render 'shared/search_form' %>
  </div>
  <% if customer_signed_in? %>
  <div class="col-md-2 ">
    <ul class="navbar-nav mr-auto float-right">
      <li class="nav-item">
        <a href="<%= cart_path %>" class="view-cart-button">View Cart</a>
      </li>
    </ul>
  </div>
  <%end%>
</div>
